<%= form_for(@brigade) do |f| %>
  <% if @brigade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@brigade.errors.count, "error") %> prohibited this brigade from being saved:</h2>

      <ul>
      <% @brigade.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :count_of_workers %><br />
    <%= f.number_field :count_of_workers %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :country_id %><br />
    <%= f.collection_select :country_id, Country.all, :id, :title %>
  </div>
  <div class="field">
    <%= f.label :job_ids, "Jobs" %><br />
    <%= f.collection_select :job_ids, Job.all, :id, :title, {}, {multiple: true} %>
  </div>
  <div class="field">
    <%= f.label :job_list, "Other jobs" %><br />
    <%= f.text_field :job_list %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
